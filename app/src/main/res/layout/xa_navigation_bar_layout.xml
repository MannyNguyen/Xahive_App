<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nav_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/xa_dark_green">

    <TextView
        android:id="@+id/nav_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="30dp"
        android:text=""
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/xa_nav_bar_title_text_size"
        android:textStyle="normal" />

    <RelativeLayout
        android:id="@+id/left_nav_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="10dp"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/back_image_view"
            android:layout_width="@dimen/xa_nav_bar_button_text_size"
            android:layout_height="@dimen/xa_nav_bar_button_text_size"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_arrow_left" />

        <TextView
            android:id="@+id/back_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@+id/back_image_view"
            android:text="back"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/right_nav_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/nav_bar_title"
        android:visibility="invisible"
        >

        <ImageView
            android:id="@+id/forward_image_view"
            android:layout_width="@dimen/xa_nav_bar_button_text_size"
            android:layout_height="@dimen/xa_nav_bar_button_text_size"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_arrow_right" />

        <TextView
            android:id="@+id/forward_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="1dp"
            android:layout_toLeftOf="@+id/forward_image_view"
            android:text="forward"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>